<%= column_wrapper do %>
  <%= card_wrapper do %>
    <%= render :image %>

    <div class="card__content">
      <h2 class="h4"><%= title %></h2>

      <div class="card__text">
        <div class="card__text--paragraph">
          <%== strip_tags summary %>
        </div>
      </div>
    </div>

    <%= render :data %>
    <%= render :status %>
    <%= render :footer %>
  <% end %>
<% end %>
