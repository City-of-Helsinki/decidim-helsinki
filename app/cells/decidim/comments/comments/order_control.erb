<div class="order-by__dropdown order-by__dropdown--right">
  <span><%= t("decidim.components.comment_order_selector.title") %></span>
  <ul id="comments-order-menu"
    class="dropdown menu"
    data-dropdown-menu="data-dropdown-menu"
    data-autoclose="false"
    data-disable-hover="true"
    data-click-open="true"
    data-close-on-click="true"
    role="menubar">
    <li class="is-dropdown-submenu-parent opens-right" role="presentation">
      <a href="#" id="comments-order-menu-control"
        class="action-link"
        aria-label="<%= t("decidim.components.comment_order_selector.title") %>"
        aria-controls="comments-order-menu"
        aria-haspopup="menu"
        role="menuitem"
      >
        <span><%= t("decidim.components.comment_order_selector.order.#{order}") %></span>
        <%= icon("caret-bottom", role: "img", "aria-hidden": true) %>
      </a>
      <ul class="menu is-dropdown-submenu submenu first-sub vertical"
        id="comments-order-chooser-menu"
        role="menu"
        aria-labelledby="comments-order-menu-control"
        data-submenu="">
        <% available_orders.each do |order_value| %>
          <li role="presentation" class="is-submenu-item is-dropdown-submenu-item">
            <%= link_to(
              t("decidim.components.comment_order_selector.order.#{order_value}"),
              decidim_comments.comments_path(commentable_gid: model.to_signed_global_id.to_s, order: order_value, reload: 1),
              tabindex: -1,
              role: "menuitem",
              remote: true
            ) %>
          </li>
        <% end %>
      </ul>
    </li>
  </ul>
</div>
