<div class="budget-list__text">
  <div>
    <%= link_to resource_path, class: "card__link" do %>
      <h5 class="card__title card--list__heading">
        <%= resource_title %>
      </h5>
    <% end %>

    <p class="card__text card-list__description">
      <% if model.budget_amount > 1 %>
        <span class="show-for-small hide-for-medium">
          <strong><%= budget_to_currency(model.budget_amount) %></strong>
          <br><br>
        </span>
      <% end %>

      <%= resource_description_teaser %>
      <br><br>

      <%= link_to resource_path, class: "card__link" do %>
        <span aria-hidden="true">
          <%= t(".more_info") %>
          <%= icon "chevron-right", aria_hidden: true %>
        </span>
        <span class="show-for-sr">
          <%= t(".more_info_with_title", title: resource_title) %>
        </span>
      <% end %>
    </p>
  </div>
</div>
