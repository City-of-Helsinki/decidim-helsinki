<section class="extended home-section" id="statistics">
  <div class="wrapper-home">
    <div class="row column text-center">
      <h2 class="heading2"><%= t("decidim.pages.home.statistics.headline", organization: current_organization.name) %></h2>
    </div>
    <div class="row align-center">
      <div class="columns mediumlarge-10 large-8">
        <div class="home-stats">
          <div class="home-stats__highlight">
            <%= cell("decidim/statistics", stats.highlighted, heading: false, design: "homepage" ) %>
          </div>

          <div class="home-stats__lowlight">
            <%= cell("decidim/statistics", stats.not_highlighted, heading: false, design: "homepage" ) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
