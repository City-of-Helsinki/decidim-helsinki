<%= link_to participatory_process_path(promoted_process), class: "card card--full card--process" do %>
  <div class="card__inner">
    <div class="card__main">
      <div class="card__content">
        <h2 class="h4"><%= decidim_html_escape(translated_attribute(promoted_process.title)) %></h2>
        <%= decidim_sanitize html_truncate(translated_attribute(promoted_process.short_description), length: 630, separator: "...") %>
      </div>
    </div>
    <div class="card__aside">
      <% if (image_src = promoted_process.attached_uploader(:hero_image).url).present? %>
        <img class="card__image" src="<%= image_src %>" alt="<%= strip_tags(translated_attribute(promoted_process.title)) %>">
      <% end %>
    </div>
  </div>
  <div class="card__footer">
    <div class="card__main">
      <div class="card__info">
        <div class="card__info__item">
          <%= l(promoted_process.start_date, format: :decidim_short) %>
          <%= "- #{l(promoted_process.end_date, format: :decidim_short)}" if promoted_process.end_date %>
        </div>
        <% if promoted_process.active_step %>
          <div class="card__info__item">
            <%= translated_attribute promoted_process.active_step.title %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
