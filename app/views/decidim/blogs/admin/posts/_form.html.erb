<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>
  <div class="card-section">
    <% if current_organization.user_groups_enabled? && Decidim::UserGroups::ManageableUserGroups.for(current_user).verified.any? %>
      <div class="field">
        <%= post_author_select_field form, :decidim_author_id, label: t("decidim.blogs.actions.author_id") %>
      </div>
    <% end %>
    <div class="row column">
      <%= form.translated :text_field, :title, autofocus: true %>
    </div>
    <div class="row column">
      <%= form.translated :text_area, :summary, rows: 3 %>
    </div>
    <div class="row column">
      <%= form.translated :editor, :body, toolbar: :full, lines: 30 %>
    </div>
    <div class="row column">
      <%= form.upload :card_image %>
    </div>
    <div class="row column">
      <%= form.upload :main_image %>
    </div>
  </div>
</div>
