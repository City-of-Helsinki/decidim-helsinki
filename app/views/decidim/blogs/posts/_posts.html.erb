<div class="row small-up-1 medium-up-2 mediumlarge-up-3 card-grid">
  <%= render partial: "decidim/blogs/posts/post", collection: posts %>
</div>

<div class="row">
  <div class="columns mediumlarge-8 large-9">
    <% if posts.empty? %>
      <div class="callout secondary">
        <p><%= t(".empty") %></p>
      </div>
    <% end %>
  </div>
</div>

<%= decidim_paginate posts %>
