<div class="container content-section">
  <div class="row column">
    <div class="main-container tabbed-container">
      <div class="page-title">
        <h1><%= translated_attribute page.title %></h1>
      </div>

      <div class="row align-justify">
        <div class="columns sidebar">
          <%= render "side_panel", current: page %>
        </div>

        <div class="columns mainbar">
          <div class="static__content">
            <%= decidim_sanitize_editor_admin translated_attribute page.content %>
          </div>
        </div>
      </div>

      <div class="margin-top-2">
        <%= cell "decidim/tos_page", :announcement %>
        <%= cell "decidim/tos_page", :form %>
      </div>
    </div>
  </div>
</div>
