<div class="reveal external-domain-warning" data-reveal>
  <div class="reveal__header">
    <div class="reveal__title"><%= t("decidim.links.warning.title") %></div>
    <button class="close-button" data-close
            aria-label="<%= t("decidim.links.warning.close_modal") %>"
            type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <%= render partial: "warning" %>
  <div class="card-wrapper">
    <div class="card external-link-url">
      <div class="card__content text-center word-break">
        <%= highlight_domain %>
      </div>
    </div>
    <div class="buttons buttons-row">
      <%= link_to t("decidim.links.warning.proceed"), external_url.to_s, target: "_blank", data: { close: "" }, class: "button primary" %>
      <button class="button hollow" data-close>
        <%= t("decidim.links.warning.cancel") %>
      </button>
    </div>
  </div>
</div>
